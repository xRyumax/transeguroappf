  var salt;
  if (process.argv.length > 3) {
    salt = process.argv[3];
    var rounds = parseInt(salt, 10);
    if (rounds == salt) {
      salt = bcrypt.genSaltSync(rounds);
    }
  } else {
    salt = bcrypt.genSaltSync();
  }
